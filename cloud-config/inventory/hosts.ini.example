#
# cloud-config/inventory/hosts.ini

[controllers]
control-plane-1 ansible_host=192.168.0.10
control-plane-2 ansible_host=192.168.0.11
control-plane-3 ansible_host=192.168.0.12

[computes]
worker-1 ansible_host=192.168.0.20
worker-2 ansible_host=192.168.0.21
worker-3 ansible_host=192.168.0.22

[cephs]
worker-1 ansible_host=192.168.0.20
worker-2 ansible_host=192.168.0.21
worker-3 ansible_host=192.168.0.22

[all:vars]
ansible_user=your-ssh-user
ansible_password=CHANGEME
ansible_ssh_private_key_file=/home/you/.ssh/your-key
ansible_become=true
ansible_become_method=sudo
ansible_become_password=CHANGEME
ansible_ssh_common_args='-o StrictHostKeyChecking=no -o UserKnownHostsFile=/dev/null'
