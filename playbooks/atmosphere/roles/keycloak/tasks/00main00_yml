- name: Ensure Bitnami Helm repo is added
  run_once: true
  delegate_to: "{{ inventory_hostname }}"
  ansible.builtin.command: helm repo add bitnami https://charts.bitnami.com/bitnami
  args:
    creates: ~/.cache/helm/repository/bitnami-index.yaml

- name: Update Helm repos
  run_once: true
  delegate_to: "{{ inventory_hostname }}"
  ansible.builtin.command: helm repo update

- name: Copy Keycloak Helm values to target host
  run_once: true
  delegate_to: "{{ inventory_hostname }}"
  ansible.builtin.copy:
    src: /home/kez/.ansible/collections/ansible_collections/vexxhost/atmosphere/charts/keycloak/values.yaml
    dest: /tmp/keycloak-values.yaml
    mode: '0644'


- name: Check if Keycloak release already exists
  run_once: true
  delegate_to: "{{ inventory_hostname }}"
  ansible.builtin.command: helm status keycloak -n auth-system
  register: keycloak_helm_status
  failed_when: false
  changed_when: false

- name: Deploy Keycloak Helm chart
  run_once: true
  when: keycloak_helm_status.rc != 0  # Only run if the release does not exist
  kubernetes.core.helm:
    name: keycloak
    chart_ref: "{{ keycloak_helm_chart_ref }}"
    release_namespace: auth-system
    create_namespace: true
    kubeconfig: "{{ atmosphere_kubeconfig }}"
    wait: true
    timeout: 10m
    #values_files:
    #  - /tmp/keycloak-values.yaml



- name: Wait until keycloak ready
  kubernetes.core.k8s_info:
    api_version: apps/v1
    kind: StatefulSet
    name: "{{ keycloak_helm_release_name }}"
    namespace: "{{ keycloak_helm_release_namespace }}"
    kubeconfig: "{{ atmosphere_kubeconfig }}"
  register: _keycloak_sts
  retries: 120
  delay: 5
  until:
    - _keycloak_sts.resources[0].status.replicas == _keycloak_sts.resources[0].status.readyReplicas

- name: Create Keycloak Ingress
  ansible.builtin.include_role:
    name: ingress
  vars:
    ingress_name: keycloak
    ingress_namespace: "{{ keycloak_helm_release_namespace }}"
    ingress_class_name: "{{ keycloak_ingress_class_name }}"
    ingress_host: "{{ keycloak_host }}"
    ingress_service_name: "{{ keycloak_helm_release_name }}"
    ingress_service_port: 80
    ingress_secret_name: "{{ keycloak_host_tls_secret_name }}"
    ingress_annotations: "{{ _keycloak_ingress_annotations | combine(keycloak_ingress_annotations, recursive=True) }}"

- name: Enable pxc strict mode
  run_once: true
  community.mysql.mysql_query:
    login_host: "{{ _pxc_service.resources[0].spec.clusterIP }}"
    login_user: root
    login_password: "{{ openstack_helm_endpoints.oslo_db.auth.admin.password }}"
    query: "set global pxc_strict_mode='MASTER'"

